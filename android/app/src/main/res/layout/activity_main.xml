<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- SIGN IN STATE -->
    <LinearLayout
        android:id="@+id/layout_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Zenith Demo"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/btn_oauth_sign_in"
            style="@style/Zenith.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OAuth Sign in" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/btn_guest_sign_in"
            style="@style/Zenith.Button.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guest Sign in" />
    </LinearLayout>

    <!-- PROFILE STATE -->
    <LinearLayout
        android:id="@+id/layout_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Page"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ID: -" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Name: -" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/btn_get_profile"
            style="@style/Zenith.Button.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Profile" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/btn_sign_out"
            style="@style/Zenith.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign out" />
    </LinearLayout>

    <!-- CONTINUE STATE -->
    <LinearLayout
        android:id="@+id/layout_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back!"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/btn_continue"
            style="@style/Zenith.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue sign in" />
    </LinearLayout>

</LinearLayout>
